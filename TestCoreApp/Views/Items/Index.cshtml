@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}


<dev class="container p-3">
    @if(TempData["successData"] != null)
    {
        <h3 style="color:brown ">
            @TempData["successData"]
        </h3>
    }

    <dev class="row pt-4">
        <dev class="col-6">
            <h2 class="text-primary">Items View</h2>
        </dev>
        <dev class="col-6 text-end" >
            <a asp-controller="Items" asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Add New Item
            </a>
        </dev>
    </dev>
    <dev> 
    <table class="table table-bordered table-striped" sytle="width:100%">
        <thead>
            <tr>
                <th scope="col">
                    Item Name
                </th>
                <th scope="col">
                    Item Price
                </th>
                <th scope="col">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table table-primary">
                    <td scope="row" width="50%">
                        @item.Name
                    </td>

                    <td scope="row" width="30%">
                        @item.Price
                    </td>
                    <td>
                            <a asp-controller="Items" asp-action="Edit" asp-route-Id="@item.Id">
                                <i class="bi bi-pencil"></i> 
                            </a>
                            &nbsp;
                            <a asp-controller="Items" asp-action="Delete" asp-route-Id="@item.Id">
                                <i class="bi bi-trash3"></i>
                            </a>
                       
                          
                           
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </dev>
</dev>

