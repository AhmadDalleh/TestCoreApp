@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<dev class="container p-3">
    <partial name="_Notifications" />
    <dev class="row pt-4">
        <dev class="col-6">
            <h2 class="text-primary">Categories View</h2>
        </dev>
        <dev class="col-6 text-end">
            <a asp-controller="Categories" asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Add New Category
            </a>
        </dev>
    </dev>
    <dev>
        <table class="table table-bordered table-striped" sytle="width:100%">
            <thead>
                <tr>
                    <th scope="col">
                        Category Name
                    </th>
                    <th scope="col">
                         Image
                    </th>
                    <th scope="col">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr class="table table-primary">
                        <td scope="row" width="30%">
                            @category.Name
                        </td>
                        <td>
                            <img src="@category.imageSrc" style="width:48px" class="img-thumbnail"/>
                        </td>
                        <td>
                            <a asp-controller="Categories" asp-action="Edit" asp-route-Id="@category.Id">
                                <i class="bi bi-pencil"></i>
                            </a>
                            &nbsp;
                            <a asp-controller="Categories" asp-action="Delete" asp-route-Id="@category.Id">
                                <i class="bi bi-trash3"></i>
                            </a>



                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </dev>
</dev>

